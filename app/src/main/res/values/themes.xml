<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.USCDoorDrink" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/usc_red</item>
        <item name="colorPrimaryVariant">@color/usc_red_dark</item>
        <item name="colorOnPrimary">@color/yellow_text</item>
        <item name="colorPrimaryDark">@color/usc_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarBackground">@color/black</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="android:windowAnimationStyle">@null</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.USCDoorDrink.NoActionBar"/>

    <style name="Theme.USCDoorDrink.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.USCDoorDrink.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>