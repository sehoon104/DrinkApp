<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content"
    android:onClick="onClickMerchantBubble">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/marker_window_title"
            android:layout_width="wrap_content"
            android:padding="8dp"
            tools:text="Text here is this"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/marker_window_snippet"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:maxWidth="300dp"
            tools:text="Text here is this and it goes and goes"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/clickForMoreInfo"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            tools:text="Click for more info."
            android:textColor="@color/grey"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>
